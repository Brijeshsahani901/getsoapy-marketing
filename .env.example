# Example env vars - copy to .env.local (Next.js reads .env.local automatically in dev)
# NEXT_PUBLIC_GETSOAPY_URL=https://tenant.getsoapy.com
# GETSOAPY_WEBHOOK_URL=https://api.getsoapy.com/webhooks/lead
# GETSOAPY_API_KEY=your_getsoapy_api_key
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_pass
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...


# GetSoapy API Configuration
GETSOAPY_API_BASE_URL=https://api.getsoapy.com/v1
GETSOAPY_TENANT_ID=your_tenant_id
GETSOAPY_API_KEY=your_getsoapy_api_key_here
GETSOAPY_WEBHOOK_SECRET=your_webhook_secret_here

# Application Settings
NEXT_PUBLIC_APP_URL=https://yourdomain.com
CONTACT_EMAIL=ops@yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com

# reCAPTCHA v3
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# File Upload
MAX_FILE_SIZE=2097152
MAX_FILE_COUNT=3
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email Service
EMAIL_SERVICE_API_KEY=your_email_service_key
